<h1>My Companies</h1>
<%= form_tag clients_path, method: :get do %>
<%= text_field_tag :query,
params[:query],
class: "form-control",
placeholder: "Search for company" %>
<% end %>
  <div class="main-container">
    <div class="cards">
      <% @clients.each do |client| %>
        <%= link_to client_path(client), style: "text-decoration: none;" do %>
          <div class="card-category" style="">
                  <%= cl_image_tag(client.company_picture, :width=>100, :height=>100, :radius=>150) %>
                 <h3><%= client.company_name %></h3>
          </div>
        <% end %>
      <% end %>

      <%= link_to new_client_path, class: "btn btn-primary d-flex align-items-center justify-content-around new-company" do %>
          <div class="">
              <h2><i class="fas fa-plus"></i></h2>
              <p>Add new Company</p>
          </div>
      <% end %>
    </div>
    <div
      id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
</div>

