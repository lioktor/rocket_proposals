
          <h1 class="h3 mb-4 text-gray-800">Let's create a new client</h1>
            <p>Please complete:</p>
            <div class="narrow-form">
              <%= simple_form_for @client do |f| %>
              <h2>Company</h2>
              <%= f.input :company_SIRET, label: false, placeholder: 'Company Resistration Number' %>
              <%= f.input :company_name, label: false, placeholder: 'Company Name' %>
              <%= f.input :company_picture, label: false, placeholder: 'Company picture' %>
              <%= f.input :company_picture_cache, as: :hidden %>
              <%= f.input :company_address, label: false, placeholder: 'Company address' %>
              <%= f.input :activity_sector, label: false, placeholder: 'Company Sector' %>
              <h2>Contact</h2>
              <%= f.input :first_name, label: false, placeholder: 'First name'  %>
              <%= f.input :last_name, label: false, placeholder: 'Last name'  %>
              <%= f.input :email, label: false, placeholder: 'Email'  %>
              <%= f.input :phone, label: false, placeholder: 'Phone'  %>
              <%= f.input :linkedin, label: false, placeholder: 'Linked'  %>
              <%= f.input :category,
                          required: true,
                          collection: ["Financial", "Technical", "Financial & Technical"],
                          input_html: { autocomplete: "category" }  %>
              <%= f.input :function, label: false, placeholder: 'Function'  %>
              <%= f.submit class: "btn btn-primary"%>
              <% end %>
            </div>
