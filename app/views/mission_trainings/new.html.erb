<div class="container">
  <div class="row">
   <div class="col-12">
    <h1>Choose your training</h1>
        <%= simple_form_for [@mission, @mission_training] do |f| %>
        <%= f.input :mission_id, :input_html => { value: @mission.id}, as: :hidden %>
         <%= f.input :quantity %>
        <%= f.input :training_id, collection: @trainings, label_method: :category %>
          <%= f.submit 'Add this training', class: "btn btn-primary"%>
        <% end %>
    </div>
  </div>
</div>
