                <%= total_hours %>
              <%   else  %>
                 <%=  "error"  %>
                <% end %>

    <tr role="row">  <!-- STAFF -->
      <% mission.staffs.each do |staff|%>
        <td><%= staff.category %></td>
        <td><%= mission.staff_quantity %></td>   <!-- peut-on appeler la mission alors que l'on est ds la boucle  staff ici ?????? -->
     <!-- calculer ici le total heures si staff ou récupérer -->
        <td><%= average_hourly_price = xxxx %></td> <!-- calculer ici le taux horaire moyen  -->
        <td><%= total_staff_price = xxxx %></td> <!-- calculer ici le prix total par an  -->
        <% end %>
    </tr>
    <tr role="row">  <!-- TRAINING -->
      <% mission.trainings.each do |training|%>
        <td><%= training.category %></td>
        <td><%= mission.training_quantity %></td>   <!-- peut-on appeler la mission alors que l'on est ds la boucle  training ici ?????? -->
        <td>/</td>  <!-- ne pas renseigner cette colonne pr le training -->
        <td><%= unit_training_price = training.duration.to_i * average_hourly_price + training.educational_cost * (1 + @business_proposal.quotation.margin_rate) %></td> <!-- calculer ici le coût total (pédagogique + salaires) par personnel -->
        <td><%= total_training_price = unit_training_price * (total_hours / 1607) * (1 + @business_proposal.quotation.margin_rate) %></td> <!-- calculer ici le prix total par an  -->
        <% end %>
    </tr>
    <tr role="row">  <!-- EQUIPMENTS -->
      <% mission.equipments.each do |equipment|%>
        <td><%= equipment.category %></td>
        <td><%= mission.equipment_quantity %></td>   <!-- peut-on appeler la mission alors que l'on est ds la boucle  equipment ici ?????? -->
        <td>/</td>  <!-- ne pas renseigner cette colonne pr les equipments -->
        <td><%= equipment.cost * (1 + @business_proposal.quotation.margin_rate) %></td> <!-- calculer ici le coût total (pédagogique + salaires) par personnel -->
        <td><%= mission.equipment_quantity * equipment.cost * (1 + @business_proposal.quotation.margin_rate) %></td> <!-- calculer ici le prix total par an  -->
        <% end %>
    </tr>
    <% end %>
    </tbody>
</table>
